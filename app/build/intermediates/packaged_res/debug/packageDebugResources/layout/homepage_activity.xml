<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Campus Buddy"
        android:titleTextColor="@android:color/white"
        android:elevation="4dp" />

    <!-- Main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center">

        <!-- Tile for Offers -->
        <LinearLayout
            android:id="@+id/tile_offers"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/tile_background"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:elevation="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_offer"
                android:contentDescription="Offers Icon"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offers"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Tile for Requests -->
        <LinearLayout
            android:id="@+id/tile_requests"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/tile_background"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:elevation="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_requests"
                android:contentDescription="Requests Icon"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requests"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Tile for Events -->
        <LinearLayout
            android:id="@+id/tile_events"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/tile_background"
            android:gravity="center"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:elevation="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_events"
                android:contentDescription="Events Icon"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textAlignment="center" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/profile_tile"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/tile_background"
                android:gravity="center"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_events"
                    android:contentDescription="Events Icon"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Logout" />

</LinearLayout>
