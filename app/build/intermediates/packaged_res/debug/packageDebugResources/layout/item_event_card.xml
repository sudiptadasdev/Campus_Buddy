<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Event Image -->
        <ImageView
            android:id="@+id/eventImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sample"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="Event Image"
            android:background="@drawable/rounded_background"/>

        <!-- Event Title next to the image -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toEndOf="@id/eventImageView"
            android:layout_alignTop="@id/eventImageView"/>

        <!-- Event Date below the title -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MM/dd/yyyy"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_toEndOf="@id/eventImageView"
            android:layout_below="@id/titleTextView"
            android:layout_marginTop="4dp"/>

        <!-- Event Location below the date -->
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_toEndOf="@id/eventImageView"
            android:layout_below="@id/dateTextView"
            android:layout_marginTop="4dp"/>

        <!-- Event Description below the image -->
        <TextView
            android:id="@+id/summaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Description goes here..."
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#424242"
            android:layout_below="@id/eventImageView"
            android:layout_marginTop="12dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
